{
    "name": "mythicalsystems/pterodactyl-php-sdk",
    "description": "A comprehensive PHP SDK for interacting with the Pterodactyl Panel API, including both Application API and Client API",
    "type": "library",
    "keywords": ["pterodactyl", "api", "sdk", "php", "panel", "game-server"],
    "homepage": "https://github.com/MythicalLTD/Pterodactyl-PHP-SDK",
    "license": "MIT",
    "authors": [
        {
            "name": "Cassian Gherman",
            "email": "cassian@mythical.systems",
            "role": "Developer"
        },
        {
            "name": "MythicalSystems",
            "email": "contact@mythical.systems",
            "role": "Organization"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "MythicalSystems\\SDK\\Pterodactyl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MythicalSystems\\SDK\\Pterodactyl\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "quality": [
            "@cs:check",
            "@analyse",
            "@test"
        ]
    }
}
